@{
   
}
@model Product
<form method="post" action="/Product/Add" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Product Name</label>
        <input asp-for="Name" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Color" class="form-label">Product Color</label>
        <input asp-for="Color" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Details" class="form-label">Details</label>
        <input asp-for="Details" class="form-control"/>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" type="file"/>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ProductTypeId">Type</label>
        <select asp-for="ProductTypeId" class="form-select">
            @foreach(ProductType item in ViewBag.typeList)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
        <a href="/" class="btn btn-outline-secondary">Add Product Type</a>
    </div>
    <div class="align-content-center">
    <button type="submit" class="btn btn-success">Save Item</button> 
    </div>
</form>
